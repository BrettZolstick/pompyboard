{
  // General
  "editor.formatOnSave": true,
  "editor.rulers": [80],

  // Nix
  "nix.formatterPath": "nixfmt",
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },

  // Rust
  "rust-analyzer.check.allTargets": false,
  "rust-analyzer.check.targets": "thumbv7em-none-eabihf",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.rulers": [100]
  },

  // Etc
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  "files.associations": {
    "*.svd": "xml"
  },

  // Spelling
  "cSpell.words": [
    "BetaHuhn",
    "cachix",
    "cfgr",
    "CHIPSERIE",
    "clippy",
    "codegen",
    "defmt",
    "devenv",
    "DIRENV",
    "direnvrc",
    "eabi",
    "eabihf",
    "fenix",
    "gpioa",
    "GPIOB",
    "gpioc",
    "hclk",
    "Intuos",
    "lsusb",
    "Mablet",
    "microcontroller",
    "nixd",
    "nixfmt",
    "nixos",
    "nixpkgs",
    "pclk",
    "pkgs",
    "pompy",
    "pompyboard",
    "pompydev",
    "pompypad",
    "PWRCLK",
    "rustflags",
    "rustup",
    "serde",
    "sysclk",
    "taplo",
    "Tdefmt",
    "thumbv",
    "Tlink",
    "usbd"
  ]
}
